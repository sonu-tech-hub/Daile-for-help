        {
          "name": "Register Worker",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"worker@example.com\",\n  \"mobile\": \"9876543210\",\n  \"password\": \"password123\",\n  \"user_type\": \"worker\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Seeker",
          "request": {
            "method": "POST",
            "header": [
              {
